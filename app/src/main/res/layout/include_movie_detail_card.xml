<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:paddingLeft="@dimen/spacing_minor"
             android:paddingTop="@dimen/spacing_minor"
             android:paddingRight="@dimen/spacing_minor"
             android:paddingBottom="@dimen/spacing_minor"
        >

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


            <FrameLayout
                    android:id="@+id/card_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:addStatesFromChildren="true"
                    android:padding="@dimen/spacing_minor"
                    >

                <TextView
                        android:id="@+id/textview_see_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/see_more"
                        android:visibility="gone"
                        android:layout_gravity="right|center_vertical"
                        />

                <TextView
                        android:id="@+id/textview_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/spacing_micro"
                        android:layout_gravity="left|center_vertical"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        />

            </FrameLayout>

            <LinearLayout
                    android:id="@+id/card_content_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_minor"
                    />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>