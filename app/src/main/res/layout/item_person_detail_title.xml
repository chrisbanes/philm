<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:baselineAligned="false">

    <app.philm.in.view.PhilmImageView
            android:id="@+id/imageview_poster"
            android:layout_width="@dimen/movie_detail_poster_width"
            android:layout_height="@dimen/movie_detail_poster_height"
            android:scaleType="centerCrop"/>

    <LinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/spacing_minor"
            android:background="@color/dark_gray"
            android:animateLayoutChanges="true"
            android:gravity="bottom">

        <app.philm.in.view.FontTextView
                android:id="@+id/textview_title"
                style="@style/Widget.Philm.Person.Detail.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <app.philm.in.view.FontTextView
                android:id="@+id/textview_subtitle_1"
                style="@style/Widget.Philm.Person.Detail.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <app.philm.in.view.FontTextView
              android:id="@+id/textview_subtitle_2"
              style="@style/Widget.Philm.Person.Detail.Subtitle"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>