<resources>

    <style name="Widget.Philm.ActionBar.Progress" parent="Widget.AppCompat.ProgressBar">
        <item name="android:minHeight">36dip</item>
        <item name="android:maxHeight">36dip</item>
    </style>

    <style name="Widget.Philm.Movie.Grid.Title" parent="android:Widget">
        <item name="font">roboto_condensed</item>
        <item name="android:textSize">18dp</item>
        <item name="android:padding">@dimen/spacing_minor</item>
        <item name="android:gravity">center|left</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="Widget.Philm.Movie.CardItem.Title" parent="android:Widget">
        <item name="font">roboto_condensed</item>
        <item name="android:textSize">15dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
    </style>

    <style name="Widget.Philm.Movie.CardItem.Subtitle" parent="Widget.Philm.Movie.CardItem.Title">
        <item name="android:textSize">13dp</item>
    </style>

    <style name="Widget.Philm.Movie.Trailer.Title" parent="android:Widget">
        <item name="font">roboto_condensed_bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:padding">@dimen/spacing_minor</item>
        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@drawable/black_translucent_gradient</item>
        <item name="android:gravity">bottom|left</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Widget.Philm.Movie.List.Title" parent="android:Widget">
        <item name="font">roboto_condensed</item>
        <item name="android:textSize">16dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Widget.Philm.Movie.List.Subtitle" parent="android:Widget">
        <item name="font">roboto_condensed</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">?android:textColorTertiary</item>
    </style>

    <style name="Widget.Philm.Movie.List.SectionHeader" parent="android:Widget">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">@dimen/spacing_major</item>
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Widget.Philm.Movie.Login.Title" parent="android:Widget">
        <item name="font">roboto_condensed</item>
        <item name="android:textSize">@dimen/movie_detail_title_textsize</item>
    </style>

    <style name="Widget.Philm.Person.Detail.Title"
        parent="Widget.Philm.Movie.Detail.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">bottom|left</item>
    </style>

    <style name="Widget.Philm.Person.Detail.Subtitle" parent="android:Widget">
        <item name="font">roboto_condensed</item>
        <item name="android:textSize">@dimen/person_detail_subtitle_textsize</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Widget.Philm.Movie.Detail.Title" parent="android:Widget">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Widget.Philm.Movie.Detail.Tagline" parent="android:Widget">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Widget.Philm.Movie.Detail.SectionHeader" parent="android:Widget">
        <item name="android:textSize">18dp</item>
        <item name="android:padding">@dimen/spacing_micro</item>
        <item name="android:paddingLeft">@dimen/spacing_major</item>
    </style>

    <style name="Widget.Philm.Movie.Detail.Summary" parent="android:Widget">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="collapsed_maxLines">@integer/default_summary_maxlines</item>
    </style>

    <style name="Widget.Philm.Movie.Detail.Ratings.Title" parent="android:Widget">
        <item name="font">roboto_light</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Widget.Philm.Movie.Detail.Ratings.Votes" parent="android:Widget">
        <item name="font">roboto_condensed_bold</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="Widget.Philm.Movie.Detail.Rating.Description" parent="android:Widget">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="Widget.Philm.Movie.Drawer.Checkin.Header" parent="android:Widget">
        <item name="font">roboto_condensed_bold</item>
        <item name="android:textSize">12dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?android:attr/textColorSecondaryInverse</item>
    </style>

    <style name="Widget.Philm.Movie.Drawer.AddAccount" parent="android:Widget">
        <item name="font">roboto_condensed_bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="Widget.Philm.Movie.Drawer.Checkin.Title" parent="android:Widget">
        <item name="font">roboto_condensed</item>
        <item name="android:textSize">18dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
    </style>

    <style name="Widget.Philm.ProgressBar" parent="android:Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="spb_color">?attr/colorPrimary</item>
        <item name="android:minHeight">4dp</item>
        <item name="android:maxHeight">4dp</item>
    </style>

    <style name="Widget.Philm.RatingBar" parent="android:Widget.Holo.Light.RatingBar">
        <item name="android:progressDrawable">@drawable/philmcolor_ratingbar_full_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/philmcolor_ratingbar_full_holo_light</item>
    </style>

    <style name="TextAppearance.Philm.FloatLabel" parent="android:Widget">
        <item name="android:textColor">@color/float_label</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Philm.Tab" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/tab_text</item>
    </style>

    <style name="Widget.Philm.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="Widget.Philm.Toolbar.Transparent">
        <item name="android:background">@null</item>
    </style>

</resources>
